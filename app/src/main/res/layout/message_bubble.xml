<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/messageBubbleLinearLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp">
    <androidx.cardview.widget.CardView
            android:id="@+id/messageBubble"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="@dimen/card_top_margin"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15sp"
            app:cardBackgroundColor="@color/purple_200">
        <LinearLayout
                android:layout_margin="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:context=".ui.supportChat.SupportChatActivity">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="0sp"
                    android:id="@+id/messageBubbleMessage"
                    android:text="Hello"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:gravity="top|start"
                    android:paddingBottom="25sp"
                    android:layout_height="match_parent"/>
            <TextView
                    android:text="20:00 AM"
                    android:id="@+id/messageBubbleDate"
                    android:gravity="bottom|end"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
